{
	"name": "camoo/framework",
	"description": "CAMOO Framework",
	"type": "library",
	"require": {
		"php": ">=7.2.0",
		"vlucas/valitron": "^1.4",
		"guzzlehttp/guzzle": "^6.2",
		"ext-mbstring": "*",
		"middlewares/request-handler": "^v2.0.0",
		"middlewares/fast-route": "^v2.0.0",
		"nikic/fast-route": "^v1.3.0",
		"twig/twig": "^3.0",
		"filp/whoops": "^2.7",
		"symfony/var-dumper": "^4.0",
		"hassankhan/config": "^2.1",
		"symfony/yaml": "^4.0",
		"symfony/cache": "^4.0",
		"doctrine/orm": "^2.6",
		"cakephp/orm": "^3.8",
		"cakephp/i18n": "^3.8",
		"cakephp/log": "^3.8",
		"aura/session": "^2.1",
		"nyholm/psr7": "^1.2",
		"ircmaxell/random-lib": "^1.2",
		"squizlabs/php_codesniffer": "^3.2",
		"http-interop/http-factory-discovery": "^1.5",
		"overclokk/cookie": "^1.0",
		"symfony/console": "^5.1",
		"nette/mail": "^v3.0"
	},
	"minimum-stability": "dev",
	"homepage": "https://camoo.cm",
	"license": "MIT",
	"prefer-stable" : true,
	"require-dev": {
		"phpunit/phpunit": "^8.4"
	},
	"authors": [
		{
			"name": "CAMOO SARL",
			"email": "framework@camoo.sarl"
		}
	],

	"keywords" : [
		"CAMOO",
		"Framework",
		"PHP opensource"
	],
	"autoload": {
		"psr-4": {
			"CAMOO\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"CAMOO\\Test\\": "tests"
		}
	},
	"suggest": {
		"phpunit/phpunit": "Allows automated tests to be run without system-wide install."
	},
	"scripts" : {
		"test": "phpunit --colors=always"
	},
	"support": {
		"issues": "https://gitlab.com/camoo/framework/issues",
		"source": "https://gitlab.com/camoo/framework"
	}
}
