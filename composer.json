{
    "name": "camoo/framework",
    "description": "CAMOO Framework",
    "type": "library",
    "require": {
        "php": ">=7.1.0",
        "vlucas/valitron": "^1.4",
        "guzzlehttp/guzzle": "^6.2",
        "ext-mbstring": "*",
        "middlewares/request-handler": "^v1.1.0",
        "middlewares/fast-route": "^v1.0",
        "nikic/fast-route": "^v1.3.0",
        "twig/twig": "^2.0",
        "filp/whoops": "^2.1",
        "symfony/var-dumper": "^4.0",
        "hassankhan/config": "^1.0",
        "symfony/yaml": "^4.0",
        "symfony/cache": "^4.0",
        "doctrine/orm": "^2.6",
        "cakephp/orm": "^3.6",
        "cakephp/i18n": "^3.6",
        "cakephp/log": "^3.6",
        "aura/session": "^2.1",
        "ircmaxell/random-lib": "^1.2",
        "squizlabs/php_codesniffer": "^3.2",
        "overclokk/cookie": "^1.0"
    },
   "minimum-stability": "dev",
   "homepage": "https://camoo.cm",
    "license": "MIT",
   "prefer-stable" : true,
    "require-dev": {
        "phpunit/phpunit": "^8.4"
    },
    "authors": [
        {
            "name": "CAMOO SARL",
            "email": "framework@camoo.sarl"
        }
    ],

     "keywords" : [
    "CAMOO",
    "Framework",
    "PHP opensource"
    ],
    "autoload": {
        "psr-4": {
            "CAMOO\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CAMOO\\Test\\": "tests"
        }
    },
    "suggest": {
        "phpunit/phpunit": "Allows automated tests to be run without system-wide install."
    },
	"scripts" : {
		"test": "phpunit --colors=always"
	},
   "support": {
        "issues": "https://github.com/camoo/framework/issues",
        "source": "https://github.com/camoo/framework"
    }
}
